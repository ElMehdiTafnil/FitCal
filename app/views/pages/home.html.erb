
    <section id="hero" class="section">
      <video autoplay loop muted plays-inline class="background-clip">
        <source src="<%= asset_path('background-video.mp4') %>" type="video/mp4">
      </video>
        <div class="hero-text">
            <h1>Your Ultimate Fitness Companion</h1>
            <p>Comprehensive tracking, tailored advice, and seamless integration</p>
            <%= link_to 'Start Your Journey',  new_activity_path, class: 'cta-button' %>
        </div>
    </section>
    <section id="how-it-works" class="section">
      <div class="background-gif"></div>
        <h2 data-aos="fade-down" data-aos-easing="linear" data-aos-duration="1500">How It Works</h2>
        <div class="steps">
            <div class="step"  data-aos="fade-right" data-aos-easing="linear" data-aos-duration="1500">
                <h3>Step 1: Sign Up</h3>
                <p>Create your account and set up your profile with your fitness goals.</p>
            </div>
            <div class="step" data-aos="fade-right" data-aos-easing="linear" data-aos-duration="1500">
                <h3>Step 2: Calories requirements</h3>
                <p>Learn how many calories you burn every day</p>
            </div>
            <div class="step" data-aos="fade-right" data-aos-easing="linear" data-aos-duration="1500">
                <h3>Step 3: Monitor Progress</h3>
                <p>Analyze your progress with detailed reports and insights.</p>
            </div>
            <div class="step" data-aos="fade-right" data-aos-easing="linear" data-aos-duration="1500">
                <h3>Step 4: Get Customized Plans</h3>
                <p>Receive personalized meal plans based on your data.</p>
            </div>
        </div>
    </section>
