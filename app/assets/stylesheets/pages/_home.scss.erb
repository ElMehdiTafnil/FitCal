}

.home-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 20px;
  background-color: #007bff;
  color: #ffffff;
}

.home-header .logo h1 {
  font-size: 24px;
  margin: 0;
  font-weight: 700;
}

nav ul {
  list-style: none;
  display: flex;
  margin: 0;
  padding: 0;
}

nav ul li {
  margin-left: 15px;
}

nav ul li a {
  text-decoration: none;
  color: #ffffff;
  font-weight: bold;
  transition: color 0.3s ease;
}

nav ul li a:hover {
  color: #cce6ff;
}

#hero {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 80px 20px;
  color: #fff;
  text-align: center;
  box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.2);
  position: relative;
  width: 100%;
  height: 100vh;
}

.hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: black; /* Black background */
    z-index: 1; /* Ensure it is below the content */
}


.hero-text {
  max-width: 600px;
}

.hero-text h1 {
  font-size: 48px;
  margin: 0 0 20px;
  animation: fadeInDown 1s ease-in-out;
}

.hero-text p {
  font-size: 20px;
  margin-bottom: 40px;
  animation: fadeInUp 1s ease-in-out;
}

.cta-button {
  padding: 15px 30px;
  background-color: #0056b3;
  color: #ffffff;
  text-decoration: none;
  border-radius: 5px;
  font-weight: bold;
  transition: background-color 0.3s ease;
  animation: fadeInUp 1.2s ease-in-out;
}

.cta-button:hover {
  background-color: #003d80;
}

.home-section {
  width: 100%;
  height: 100vh;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.home-section.how-it-works {
  background-color: #ffffff;
}

.home-section.features {
  background-color: #f4f4f4;
}

.home-section.testimonials {
  background-color: #ffffff;
}

.h2 {
  font-size: 32px;
  color: white;
  text-align: center;
  margin-bottom: 20px;
}

.background-clip {
  position: fixed;
  top: 50%;
  left: 50%;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transform: translate(-50%, -50%);
  z-index: -1;
}


