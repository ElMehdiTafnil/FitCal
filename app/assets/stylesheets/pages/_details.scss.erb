.container {
  max-width: 1000px;
  margin: 0 auto;
  margin-top: 20px;
  background-color: #fff;
  padding: 20px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  border-radius: 8px;
}

.info-icon {
  margin-left: 3px; /* Space between icon and label text */
  cursor: pointer;
  position: relative;
  font-size: 13px; /* Adjust icon size as needed */
  width: 20px; /* Set width for the circle */
  height: 20px; /* Set height for the circle */
  display: flex;
  align-items: center; /* Center icon vertically */
  justify-content: center; /* Center icon horizontally */
  background-color: black; /* Background color of the circle */
  color: #fff; /* Icon color */
  border-radius: 50%; /* Make it a circle */
  text-align: center;
}

.info-icon::before {
  content: attr(data-tooltip);
  position: absolute;
  left: 50%;
  top: 100%;
  transform: translateX(-50%);
  background-color: #333;
  color: #fff;
  padding: 5px;
  border-radius: 4px;
  white-space: nowrap;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease;
  font-size: 12px;
}

.info-icon:hover::before {
  opacity: 1;
  visibility: visible;
}

.result, .macronutrient {
  margin-bottom: 20px;
}
.macronutrient label {
  display: block;
  margin-bottom: 5px;
  font-size: 15px;
}

.result label {
  display: flex; /* Use Flexbox inside label */
  align-items: center; /* Center items vertically */
  margin-right: 10px; /* Space between label and value */
  margin-top: 20px;
}
.macronutrient span {
  display: block;
  font-weight: bold;
  margin-top: 5px;
  border-bottom: 1px dotted #ffffff;
  font-size: 25px;
}

.result span {
  display: block;
  font-weight: bold;
  margin-top: 5px;
  font-size: 25px;
}
.feedback {
  background-color: #e9f7ef;
  padding: 15px;
  border: 1px solid #d4edda;
  border-radius: 5px;
  color: #155724;
}

.feedback p {
  margin: 0;
}
.vitamins {
  background-color: #fff3cd;
  padding: 15px;
  border: 1px solid #ffeeba;
  border-radius: 5px;
  color: #856404;
  margin-top: 20px;
}
.form-group {
  margin-bottom: 15px;
}
.form-group label {
  display: block;
  margin-bottom: 5px;
}
.form-group input, .form-group select {
  width: 100%;
  padding: 8px;
  box-sizing: border-box;
}
.button {
  display: inline-block;
  padding: 10px 20px;
  background-color: #007BFF;
  color: #fff;
  text-align: center;
  border-radius: 5px;
  text-decoration: none;
  cursor: pointer;
  border: none;
}

.weight-container {
  margin-bottom: 20px;
  background-color: #f2f2f2;
  border-radius: 10px;
  padding: 15px;
}

.weight-container label {
  font-weight: bold;
  padding-bottom: 10px;
}

.weight-container p {
  margin: 0;
  font-size: 15px;
}

.result-container {
  display: flex;
  align-items: center;
  justify-content: center; /* Center both items horizontally */
  margin-bottom: 20px;
  background-color: #f2f2f2;
  border-radius: 10px;
  margin-top: 20px;
}

.result {
  padding: 0 20px; /* Space around the text */
  text-align: center; /* Center the text inside each item */
}

.divider {
  width: 1px; /* Thin line */
  height: 40px; /* Height of the line */
  background-color: grey; /* Color of the line */
  margin: 0 10px; /* Space around the line */
}

.macronutrient-container {
  display: flex;
  gap: 20px; /* Adds space between the cards */
  justify-content: space-between; /* Ensures the cards are evenly spaced */
  flex-wrap: wrap; /* Allows wrapping to the next line if the screen is too small */
}

.macronutrient {
  position: relative;
  width: 300px;
  height: 250px;
  background-color: #007bff;
  color: white;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  perspective: 1000px;
  box-shadow: 0 0 0 5px #fff;
  transition: all 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  will-change: transform;
  background-position: center; /* Center the background image */
  background-repeat: no-repeat; /* Prevent the background image from repeating */
}

.macronutrient.maintain {
  background-image: url('<%= asset_path('maintain.png') %>');
  background-size: 60px 60px;
}

.macronutrient.cut {
  background-image: url('<%= asset_path('cut.png') %>');
  background-size: 60px 60px;
}

.macronutrient.bulk {
  background-image: url('<%= asset_path('bulk.png') %>');
  background-size: 60px 60px;
}

.macronutrient:hover {
  transform: scale(1.05);
  box-shadow: 0 8px 16px white;
  background-size: 0 0;
}

.card_content {
  position: absolute;
  width: 100%;
  height: 100%;
  padding: 20px;
  box-sizing: border-box;
  background-color: #007bff;
  color: white;
  transform: rotateX(-90deg);
  transform-origin: bottom;
  transition: all 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  display: flex;
  flex-direction: column;
  align-items: center; /* Center the content horizontally */
  justify-content: center; /* Center the content vertically */
  text-align: center;
}

.macronutrient:hover .card_content {
  transform: rotateX(0deg);
}

.macronutrient h3 {
  fill: #333;
  transition: all 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  padding-bottom: 100px;
}

.macronutrient:hover h3 {
  scale: 0;
}

.update-details-container {
  margin-bottom: 20px;
  margin-top: 20px;
  max-width: 400px; /* Restrict width for better centering */
  margin: 20px auto;
  padding: 20px; /* Add padding inside the container */
  background-color: #f2f2f2; /* Optional: Background color */
  border-radius: 8px; /* Optional: Rounded corners */
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); /* Optional: Add shadow */
}

.update-details-container h2 {
  text-align: center; /* Center the heading */
  margin-bottom: 20px; /* Add space below the heading */
}

.recal-textbox {
  margin-bottom: 15px; /* Space out the form fields */
}

.recal-textbox label {
  display: block; /* Ensure label is on top of the input */
  margin-bottom: 5px; /* Space between label and input */
  font-weight: bold;
}

.form-control {
  width: 100%; /* Make input fields full width */
  padding: 10px; /* Padding inside input fields */
  border-radius: 5px; /* Rounded corners */
  border: 1px solid #ccc; /* Border styling */
  background-color: #ffffff;
}

.submit-button {
  text-align: center; /* Center the button */
  margin-top: 20px; /* Space above the button */
}

.submit-button .button {
  padding: 10px 20px; /* Padding inside the button */
  background-color: #007bff; /* Button background color */
  border: none; /* Remove border */
  border-radius: 5px; /* Rounded corners */
  color: white; /* Button text color */
  font-size: 16px; /* Button text size */
  cursor: pointer; /* Change cursor on hover */
}

.submit-button .button:hover {
  background-color: #0056b3; /* Darken button on hover */
}
